{
  "compilerOptions": {
    // ===== development
    "sourceMap": true,
    // ===== language features
    "jsx": "preserve",
    "moduleResolution": "node",
    "module": "esnext",
    "experimentalDecorators": true,
    // ===== transpiling
    "target": "esnext",
    "importHelpers": false, // importing helper functions from tslib
    "noEmitHelpers": false, // disable emitting inline helper function
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "allowJs": true,
    // ===== typechecking
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    // =====
    "skipDefaultLibCheck": true,
    // ===== types
    "lib": [
      "es6",
      "dom",
      // "es2016",
      "es2017.object"
    ],
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
